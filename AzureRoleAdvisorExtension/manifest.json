{
    "manifest_version": 2,
    "name": "Azure RoleAdvisor",
    "version": "1.0",
    "description": "Suggests Azure RBAC roles based on the current page context in Azure portal",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": [
          "*://portal.azure.com/*",
          "*://portal.azure.us/*"
        ],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/ara16.png",
        "32": "icons/ara32.png",
        "48": "icons/ara48.png",
        "128": "icons/ara128.png"
      }
    },
    "icons": {
      "16": "icons/ara16.png",
      "32": "icons/ara32.png",
      "48": "icons/ara48.png",
      "128": "icons/ara128.png"
    }
  }
  
