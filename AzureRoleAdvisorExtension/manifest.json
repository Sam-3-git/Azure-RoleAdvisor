{
  "manifest_version": 3,
  "name": "Azure RoleAdvisor",
  "version": "1.0",
  "description": "A tool to display Azure roles and their descriptions",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ]
}
