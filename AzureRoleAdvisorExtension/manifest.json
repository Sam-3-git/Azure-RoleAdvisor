{
  "manifest_version": 3,
  "name": "Azure RoleAdvisor",
  "version": "1.0",
  "description": "Displays role information for Azure resources.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://portal.azure.com/*",
    "https://portal.azure.us/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://portal.azure.com/*",
        "*://portal.azure.us/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/ara16.png",
      "48": "icons/ara48.png",
      "128": "icons/ara128.png"
    }
  },
  "icons": {
    "16": "icons/ara16.png",
    "48": "icons/ara48.png",
    "128": "icons/ara128.png"
  }
}
