{
    "compilerOptions": {
      "target": "ES6",                      // JavaScript version to output
      "module": "ESNext",                     // get rid of export{} in bottom of compiled scripts
      "moduleResolution": "Node",           // Module resolution strategy
      "types": ["chrome"],                  // Needed for chrome API
      "strict": true,                       // Enable all strict type-checking options
      "esModuleInterop": true,              // Import compatibility for CommonJS modules
      "skipLibCheck": true,                 // Skip type checks for dependencies
      "outDir": "../CloudCompass/scripts",  // Output directory for compiled files
      "rootDir": "./scripts"                // Directory containing your TypeScript files
    },
    "include": ["scripts/*.ts"] // Include all TypeScript files in the scripts folder
  }
  